    <TextView
        android:id="@+id/userAnswerTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="26dp"
        android:text="User: "
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/guestTimeTextView"
        app:layout_constraintTop_toBottomOf="@+id/guestTimeTextView" />

    <TextView
        android:id="@+id/guestAnswerTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginStart="71dp"
        android:text="Guest: "
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/userAnswerTextView"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/guestScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 0"
        android:textSize="30sp"
        android:layout_marginRight="77dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guestAnswerTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/guestTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60s"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
